    def _load_courses(self):
        """ØªØ­Ù…ÙŠÙ„ Ø¨ÙŠØ§Ù†Ø§Øª Ø§Ù„Ø¯ÙˆØ±Ø§Øª"""
        # Ù…Ø³Ø­ Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª Ø§Ù„Ø­Ø§Ù„ÙŠØ©
        for item in self.courses_tree.get_children():
            self.courses_tree.delete(item)

        try:
            cursor = self.db_conn.cursor()
            cursor.execute("""
                SELECT number, name, start_date, end_date, category 
                FROM courses 
                ORDER BY start_date DESC
            """)

            courses = cursor.fetchall()

            for index, course in enumerate(courses):
                tag = 'evenrow' if index % 2 == 0 else 'oddrow'
                self.courses_tree.insert("", tk.END, values=course, tags=(tag,))

            # ØªØ­Ø¯ÙŠØ« Ø§Ù„Ø¹Ø¯Ø§Ø¯
            if hasattr(self, 'course_count_label'):
                self.course_count_label.config(text=f"Ø¥Ø¬Ù…Ø§Ù„ÙŠ Ø¹Ø¯Ø¯ Ø§Ù„Ø¯ÙˆØ±Ø§Øª: {len(courses)}")

        except Exception as e:
            print(f"Ø®Ø·Ø£ ÙÙŠ ØªØ­Ù…ÙŠÙ„ Ø§Ù„Ø¯ÙˆØ±Ø§Øª: {e}")

