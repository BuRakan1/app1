    def _archive_selected_program(self):
        """Ø£Ø±Ø´ÙØ© Ø§Ù„Ø¨Ø±Ù†Ø§Ù…Ø¬ Ø§Ù„Ù…Ø­Ø¯Ø¯"""
        selection = self.programs_tree.selection()
