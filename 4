            if tag.startswith('id_'):
                program_id = int(tag.split('_')[1])
                break

        if not program_id:
            messagebox.showerror("Ø®Ø·Ø£", "Ù„Ø§ ÙŠÙ…ÙƒÙ† ØªØ­Ø¯ÙŠØ¯ Ø§Ù„Ø¨Ø±Ù†Ø§Ù…Ø¬")
            return

